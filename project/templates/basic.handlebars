<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Student Request Form</title>
    
    <!-- CoreUI Styles -->
    <link rel="stylesheet" href="vendors/simplebar/css/simplebar.css">
    <link href="css/style.css" rel="stylesheet">

    <style>
      /* Custom styles for better layout */
      .main-content {
        margin-left: 250px; /* Adjust for sidebar */
        padding: 20px;
      }
    </style>
  </head>
  <body>
<!-- Sidebar -->
    <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
      <div class="sidebar-brand">
        <h4>Dashboard</h4>
      </div>
      <ul class="sidebar-nav">
        <li class="nav-item"><a class="nav-link" href="/Dashboard">Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/userRequests">Requests</a></li>
      </ul>
    </div>

    <!-- Top Navigation Bar -->
    <header class="header header-sticky mb-4">
      <div class="container-fluid d-flex justify-content-between align-items-center">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb" style="padding-left: 250px;">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item active">Student Request Form</li>
          </ol>
        </nav>
        
        <!-- User Profile Icon -->
        <div class="user-profile">
          <img src="assets/user-avatar.png" alt="User" width="40" height="40" class="rounded-circle">
          <a href="/logout">logout</a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="wrapper d-flex flex-column min-vh-100">
      <main class="container main-content">
        <div class="card">
          <div class="card-body">
            <h3 class="mb-4">Student Request Form</h3>
            <form action="/submitRequest" method="post">
              
              <input type="hidden" name="student_id" value="123456">
              
              <label>Full Name</label>
              <input type="text" name="name" class="form-control" required>
              
              <label>Email</label>
              <input type="email" name="email" class="form-control" value="student@example.com">
              
              <label>Course Code</label>
              <input type="text" name="course_code" class="form-control" required>
              
              <label>Course Name</label>
              <input type="text" name="course_name" class="form-control" required>
              
              <label>Current Section</label>
              <input type="text" name="Section" class="form-control" required>
              
              <label>Request Type</label>
              <select name="request_type" class="form-select" required>
                <option value="Change Section">Change Section</option>
                <option value="Register for Capped Course">Register for Capped Course</option>
                <option value="Drop Course">Drop Course</option>
              </select>
              
              <label>Reason</label>
              <textarea name="reason" class="form-control" rows="3" required></textarea>
              
              <button type="submit" class="btn btn-primary mt-3">Submit Request</button>
            </form>
          </div>
        </div>
      </main>
    </div>

    <!-- CoreUI Scripts -->
    <script src="vendors/@coreui/coreui/js/coreui.bundle.min.js"></script>
    <script src="vendors/simplebar/js/simplebar.min.js"></script>

  </body>
</html>
