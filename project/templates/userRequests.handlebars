<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Request Details </title>
    
    <!-- CoreUI Styles -->
    <link rel="stylesheet" href="vendors/simplebar/css/simplebar.css">
    <link href="css/style.css" rel="stylesheet">

    <style>
      /* Custom styles for better layout */
      .main-content {
        margin-left: 250px; /* Adjust for sidebar */
        padding: 20px;
      }
      .request-info p {
        margin-bottom: 15px;
        font-size: 1.1rem;
      }
      .badge-pending {
        background-color: #ffc107;
        color: #212529;
        padding: 5px 10px;
        border-radius: 4px;
        font-weight: bold;
      }
    </style>
  </head>
  <body>

    <!-- Sidebar -->
    <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
      <div class="sidebar-brand">
        <h4>Dashboard</h4>
      </div>
      <ul class="sidebar-nav">
        <li class="nav-item"><a class="nav-link" href="/Dashboard">Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/userRequests">Requests</a></li>
      </ul>
    </div>

    <!-- Top Navigation Bar -->
    <header class="header header-sticky mb-4">
      <div class="container-fluid d-flex justify-content-between align-items-center">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb" style="padding-left: 250px;">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item active">Student Request Form</li>
          </ol>
        </nav>
        
        <!-- User Profile Icon -->
        <div class="user-profile">
          <img src="assets/user-avatar.png" alt="User" width="40" height="40" class="rounded-circle">
          <a href="/logout">logout</a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="wrapper d-flex flex-column min-vh-100">
      <main class="container main-content">
        <div class="card">
          <div class="card-body">
            <h3 class="mb-4">Request Details</h3>
            
            <div class="request-info">
              <p><strong>Student:</strong> {{request.fullName}}</p>
              <p><strong>Email:</strong> {{request.email}}</p>
              <p><strong>Course:</strong> {{request.courseCode}} - {{request.courseName}}</p>
              <p><strong>Current Section:</strong> {{request.currentSection}}</p>
              <p><strong>Request Type:</strong> {{request.requestType}}</p>
              <p><strong>Reason:</strong> {{request.reason}}</p>
              <p><strong>Estimate date  :</strong> {{request.time}}</p>
              <p><strong>Status:</strong> <span class="badge-pending">{{request.status}}</span></p>
            </div>
            
            <div class="action-buttons mt-4">
              <button class="btn btn-danger" onclick="window.location.href='/deleteRequest?id={{request._id}}'">Cancel Request</button>
              <button class="btn btn-success" onclick="window.location.href='/resubmitRequest?id={{request._id}}'">Resubmit Request</button>
              <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- CoreUI Scripts -->
    <script src="vendors/@coreui/coreui/js/coreui.bundle.min.js"></script>
    <script src="vendors/simplebar/js/simplebar.min.js"></script>

  </body>
</html>
